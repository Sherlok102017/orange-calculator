<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_orange"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <!-- Дисплей результата -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_secondary"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result_display"
            android:textSize="48sp"
            android:textColor="@color/text_display"
            android:gravity="end"
            android:background="@color/white"
            android:padding="16dp"
            android:minHeight="80dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Кнопки калькулятора -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Первый ряд -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:text="@string/button_clear"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_clear"
            android:onClick="onClearClick" />

        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_plus_minus"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_operator"
            android:onClick="onPlusMinusClick" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_divide"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_operator"
            android:onClick="onOperatorClick" />

        <!-- Второй ряд -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_7"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_8"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_9"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_multiply"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_operator"
            android:onClick="onOperatorClick" />

        <!-- Третий ряд -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_4"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_5"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_6"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_minus"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_operator"
            android:onClick="onOperatorClick" />

        <!-- Четвертый ряд -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_1"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_2"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_3"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_plus"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_operator"
            android:onClick="onOperatorClick" />

        <!-- Пятый ряд -->
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="2"
            android:layout_rowWeight="1"
            android:text="@string/button_0"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onNumberClick" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_dot"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_number"
            android:onClick="onDotClick" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="@string/button_equals"
            android:textSize="24sp"
            android:textColor="@color/text_secondary"
            android:backgroundTint="@color/button_equals"
            android:onClick="onEqualsClick" />

    </GridLayout>

</LinearLayout>
